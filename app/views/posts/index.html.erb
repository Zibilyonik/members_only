<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<ul class="hmenu">
  <%= render 'devise/menu/login_registration_items' %>
</ul>
<%= yield %>

<table>
  <thead>
    <tr>
      <th>Secrets</th>
      <% if user_signed_in? %>
        <th>Author</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.post %></td>
        <% if user_signed_in? %>
          <td><%= post.user_id %></td>
        <% end %>
        <% if user_signed_in? && current_user.id == post.user_id %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
