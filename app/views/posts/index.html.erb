<p id="notice"><%= notice %></p>

<h1 class = "title">Secrets</h1>

<ul class="hmenu">
  <%= render 'devise/menu/login_registration_items' %>
</ul>
<%= yield %>

  <div class="section">
    <div class="container">
    <% @posts.each do |post| %>
      <div class="card">
        <div class="card-content">
          <div class="content">
            <%= post.post %>
          </div>
          <% if user_signed_in? %>
            <p> Author: <%= post.email %></>
          <% end %>
          <% if user_signed_in? && current_user.id == post.user_id %>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Post', new_post_path %>
